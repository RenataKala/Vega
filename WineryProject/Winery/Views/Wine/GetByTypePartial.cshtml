@model IEnumerable<Winery.Models.WineViewModel>




<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
         <div class="card text-left col-md-3 m-4" >
           <img class="card-img-top img img-fluid"height="300" width="150" src="@Url.Content(item.ImagePath)"  alt="Card image">
           <div class="card-img-overlay">
               <h4 class="card-title">@item.Name</h4>
               <h4 class="card-title">@item.Price $</h4>
               <a href="#" class="addtocart btn btn-outline-danger font-weight-bold">Add to cart</a>
             
           </div>
         </div>
        
        }
    </div>
</div>



