@model IEnumerable<Winery.Models.WineViewModel>

@{
    ViewBag.Title = "ListAllWines";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<hr>

    <div class="row">
        @foreach (var item in Model)
        {
        <div id="DIV_@item.WineID" class="col-md-3 border-bottom">
            <img src="@Url.Content(item.ImagePath)" class="img-fluid" />
            @Html.DisplayFor(modelItem => item.Name)<br />
           
          
            @Html.ActionLink("Details", "Details", new { id = item.WineID }) |
            @Html.ActionLink("Delete", "DeleteWine", new {  id=item.WineID },
        new { onclick = "return confirm('Are you sure you wish to delete?');" })

        </div>                    
        
        }
    </div>


